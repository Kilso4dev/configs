{
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp",
                "h",
                "hpp",
                "objh",
                "objhpp"
            ],
            "rootPatterns": [
                ".clang",
                ".vim/",
                ".git/",
                "compile_commands.json"
            ],
            "initializingOptions": {
                "cache": {
                    "directory": "/tmp/clangd"
                }
            }
        },
        "python": {
            "command": "python3",
            "args": [
                "-mpyls",
                "-vv",
                "--log-file",
                "/tmp/lsp_python.log"
            ],
            "trace.server": "verbose",
            "filetypes": [
                "python",
                "py",
                "py2",
                "py3"
            ],
            "settings": {
                "pyls": {
                    "enable": true,
                    "trace": {
                        "server": "verbose"
                    },
                    "commandPath": "",
                    "configurationSources": [
                        "pycodestyle"
                    ],
                    "plugins": {
                    "jedi_completion": {
                        "enabled": true
                    },
                    "jedi_hover": {
                        "enabled": true
                    },
                    "jedi_references": {
                        "enabled": true
                    },
                    "jedi_signature_help": {
                        "enabled": true
                    },
                    "jedi_symbols": {
                        "enabled": true,
                        "all_scopes": true
                    },
                    "mccabe": {
                        "enabled": true,
                        "threshold": 15
                    },
                    "preload": {
                        "enabled": true
                    },
                    "pycodestyle": {
                        "enabled": false
                    },
                    "pydocstyle": {
                        "enabled": false,
                        "match": "(?!test_).*\\.py",
                        "matchDir": "[^\\.].*"
                    },
                    "pyflakes": {
                        "enabled": true
                    },
                    "rope_completion": {
                        "enabled": true
                    },
                    "yapf": {
                        "enabled": true
                    }
                }
            }
            }
        }
        ,"javascript": {
            "command": "/opt/javascript-typescript-lsp/lib/language-server-stdio.js",
            "args": ["--trace"],
            "filetypes": [
                "javascript",
                "javascriptreact",
                "js",
                "ts"
            ],
            "rootPatterns": [
                ".git/",
                "package-lock.json",
                "package.json",
                "node_modules"
            ]
        }
    }
}
